{
  "name": "cloudstack-ui",
  "version": "1.0.7",
  "license": "Apache-2.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --proxy-config proxy.conf.js --port 8080",
    "build": "ng build --prod",
    "build:aot": "ng build --prod --aot",
    "test": "jest --no-cache --coverage",
    "test:watch": "jest --no-cache --watchAll",
    "lint": "ng lint",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "private": true,
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/src/testutils/setupJest.ts",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "src/tsconfig.spec.json"
      },
      "__TRANSFORM_HTML__": true
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx|@angular-mdl|ngx-clipboard|ngx-window-token)"
    ],
    "coveragePathIgnorePatterns": ["src/testutils"],
    "coverageReporters": ["json", "lcov", "cobertura"]
  },
  "dependencies": {
    "@angular-mdl/core": "4.0.8",
    "@angular-mdl/popover": "0.6.3",
    "@angular-mdl/select": "0.10.4",
    "@angular/animations": "4.1.3",
    "@angular/cdk": "2.0.0-beta.8",
    "@angular/common": "4.1.3",
    "@angular/compiler": "4.1.3",
    "@angular/core": "4.1.3",
    "@angular/forms": "4.1.3",
    "@angular/http": "4.1.3",
    "@angular/material": "2.0.0-beta.8",
    "@angular/platform-browser": "4.1.3",
    "@angular/platform-browser-dynamic": "4.1.3",
    "@angular/router": "4.1.3",
    "@ngx-translate/core": "^7.0.0",
    "@ngx-translate/http-loader": "^0.1.0",
    "chart.js": "github:zolotyx/Chart.js#v2.6.0-csui",
    "core-js": "^2.4.1",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "ng-dynamic-component": "1.0.8",
    "ng2-charts": "github:andrewbents/ng2-charts#v1.6.1-CSUI",
    "ng2-dragula": "1.5.0",
    "ngx-clipboard": "^8.0.2",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.1.0",
    "uuid": "^3.1.0",
    "web-animations-js": "2.3.1",
    "zone.js": "0.8.16"
  },
  "devDependencies": {
    "@angular/cli": "1.2.2",
    "@angular/compiler-cli": "4.1.3",
    "@angular/language-service": "4.1.3",
    "@types/jest": "^20.0.5",
    "@types/node": "^8.0.16",
    "codelyzer": "~3.0.1",
    "conventional-changelog": "^1.1.3",
    "conventional-changelog-cli": "^1.3.2",
    "jest": "^20.0.4",
    "jest-preset-angular": "^2.0.5",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-junit-reporter": "^1.2.0",
    "karma-mocha-reporter": "^2.2.3",
    "protractor": "~5.1.2",
    "ts-node": "~3.0.4",
    "tslint": "~5.3.2",
    "typescript": "~2.3.3"
  }
}
