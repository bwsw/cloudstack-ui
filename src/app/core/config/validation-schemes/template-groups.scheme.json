{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "templateGroups",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id"],
    "additionalProperties": false,
    "properties": {
      "id": {
        "type": "string",
        "minLength": 1
      },
      "translations": {
        "$ref": "#/definitions/Translations"
      }
    }
  },
  "definitions": {
    "Translations": {
      "type": "object",
      "required": ["ru", "en"],
      "additionalProperties": false,
      "properties": {
        "ru": {
          "type": "string"
        },
        "en": {
          "type": "string"
        }
      }
    }
  }
}
