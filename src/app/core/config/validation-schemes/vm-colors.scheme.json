{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "vmColors",
  "type": "array",
  "uniqueItemProperties": ["value"],
  "errorMessage": {
    "uniqueItemProperties": "should NOT contain objects with the same value"
  },
  "items": {
    "type": "object",
    "required": ["value"],
    "additionalProperties": false,
    "properties": {
      "value": {
        "type": "string",
        "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
      }
    }
  }
}
