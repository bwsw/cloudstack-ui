{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "serviceOfferingClasses",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "name", "description", "serviceOfferings"],
    "additionalProperties": false,
    "properties": {
      "id": {
        "type": "string",
        "minLength": 1
      },
      "name": {
        "$ref": "#/definitions/Translations"
      },
      "description": {
        "$ref": "#/definitions/Translations"
      },
      "serviceOfferings": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    }
  },
  "definitions": {
    "Translations": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "ru": {
          "type": "string"
        },
        "en": {
          "type": "string"
        }
      }
    }
  }
}
